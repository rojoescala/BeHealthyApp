<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/fondoAzul"
    android:layout_height="match_parent"
    tools:context=".pantallaGlucosa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
        android:id="@+id/atras"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_chevron_left_black_24dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/redrock"
            android:text="Glucosa"
            android:textColor="@color/blanco"
            android:textSize="50sp"/>



    </RelativeLayout>




    <TextView
        android:id="@+id/textoDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:text="Lunes"
        android:textColor="@color/blanco"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        />


    <EditText
        android:id="@+id/glucosa_text"
        android:background="@drawable/round_edittext"
        android:hint="Nivel de Glucosa"
        android:layout_marginTop="20dp"
        android:inputType="numberDecimal"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:alpha="0.6"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_guardarGlucosa"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:layout_gravity="center"
        android:background="@drawable/button_ejercicio"
        ></Button>
    <ListView
        android:id="@+id/lista_Glocusa"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"></ListView>




</LinearLayout>
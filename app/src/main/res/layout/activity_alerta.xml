<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Medicamentos"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fondoAzul"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/atras"
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_chevron_left_black_24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/redrock"
                android:text="Alerta"
                android:textColor="@color/blanco"
                android:textSize="50sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/textoDia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:text="Lunes"
            android:textColor="@color/blanco"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            />



        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/alerta"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Muy buen desempeño"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/blanco"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blanco">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Hora de hidratarse!"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/fondoAzul"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No olvides tomar tus 2.5 lts de agua"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/fondoAzul"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/agua"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            />
        <Button
            android:id="@+id/btnagua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomé agua"
            android:background="@color/fondoAzul"
            android:textColor="@color/blanco"
            android:layout_gravity="center"
            />
        <ProgressBar
            android:id="@+id/progresswater"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            />
        <ProgressBar
            android:id="@+id/progresswater"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            />
    </LinearLayout>
        </ScrollView>



</LinearLayout>
